<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="chatVM" type="com.soulanjo.app.modules.chat.data.viewmodel.ChatVM"/>
    </data>
    <LinearLayout android:id="@+id/linearWowAwesome"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyle{&quot;name&quot;:&quot;primary&quot;}">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageClose"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_close"
                tools:ignore="ContentDescription" tools:src="@drawable/img_close"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtGarryWiller"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{chatVM.chatModel.txtGarryWiller}"
                style="@style/txtIntersemibold20_1" tools:text="@string/lbl_garry_willer"/>
            <ImageView android:id="@+id/imageCircleImage"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="centerCrop" circular="@{true}"
                imageRes="@{@drawable/img_ellipse_14}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse_14"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:gravity="end" android:id="@+id/linearChat"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_24pxv" android:paddingTop="@dimen/_24pxv">
            <View
                android:background="@color/{&quot;name&quot;:&quot;secondaryContainer&quot;}"
                android:id="@+id/lineLine"
                android:layout_height="@dimen/_2pxv" android:layout_width="@dimen/_414pxh"/>
            <LinearLayout android:id="@+id/linearFrameTwentyFour"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_12pxv"
                android:paddingEnd="@dimen/_23pxh"
                android:paddingStart="@dimen/_23pxh"
                android:paddingTop="@dimen/_12pxv" style="@style/groupStylenamedeep_purple_2">
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtHiLarryHowAre"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{chatVM.chatModel.txtHiLarryHowAre}"
                    style="@style/txtInterregular14_1" tools:text="@string/msg_hi_larry_how_are"/>
            </LinearLayout>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearDelivered"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtDelivered"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{chatVM.chatModel.txtDelivered}"
                    style="@style/txtInterregular12_2" tools:text="@string/lbl_delivered"/>
                <ImageView android:id="@+id/imageLocation"
                    android:layout_gravity="bottom"
                    android:layout_height="@dimen/_10pxh"
                    android:layout_width="@dimen/_15pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_location_deep_purple_a200"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_location_deep_purple_a200"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearFrameTwentyFive"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_6pxv"
                android:paddingEnd="@dimen/_20pxh"
                android:paddingStart="@dimen/_20pxh"
                android:paddingTop="@dimen/_6pxv" style="@style/groupStyle{&quot;name&quot;:&quot;deep_purple_100&quot;}cornerRadius">
                <TextView android:id="@+id/txtHelloGerryIM"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="@{chatVM.chatModel.txtHelloGerryIM}"
                    style="@style/txtInterregular14_4" tools:text="@string/msg_hello_gerry_i_m"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearFortyNine"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearFortyNine1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <ImageView android:id="@+id/imageFortyNine"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_65pxh"
                        android:layout_width="@dimen/_109pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_15pxh}"
                        imageRes="@{@drawable/img_49}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_49"/>
                    <ImageView android:id="@+id/imageFifty"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="@dimen/_65pxh"
                        android:layout_width="@dimen/_109pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_1pxh}"
                        imageRes="@{@drawable/img_50}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_50"/>
                </LinearLayout>
                <ImageView android:id="@+id/imageFiftyOne"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_130pxh"
                    android:layout_width="@dimen/_160pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_15pxh}"
                    imageRes="@{@drawable/img_51}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_51"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/rectangle_bg_name_deep_purple_a200_radius_tl_15_bl_15_br_15"
                android:ellipsize="end" android:fontFamily="@font/inter"
                android:gravity="center" android:id="@+id/btnWowAwesome"
                android:layout_height="@dimen/_45pxv"
                android:layout_width="@dimen/_179pxh"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_wow_awesome"
                android:textAllCaps="false"
                android:textColor="@color/{&quot;name&quot;:&quot;primary&quot;}"
                android:textFontWeight="400"
                android:textSize="@dimen/_14pxh"
                android:textStyle="normal" tools:text="@string/lbl_wow_awesome"/>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearDelivered1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/txtDelivered1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@{chatVM.chatModel.txtDelivered1}"
                    style="@style/txtInterregular12_2" tools:text="@string/lbl_delivered"/>
                <ImageView android:id="@+id/imageLocation1"
                    android:layout_gravity="bottom"
                    android:layout_height="@dimen/_10pxh"
                    android:layout_width="@dimen/_15pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_location_deep_purple_a200"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_location_deep_purple_a200"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical"
            android:id="@+id/linearMessageBox"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <EditText
                android:background="@drawable/rectangle_bg_name_secondarycontainer_radius_25"
                android:ellipsize="end" android:fontFamily="@font/inter"
                android:hint="@string/lbl_write_a_comment"
                android:id="@+id/etComment" android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/_16pxh"
                android:paddingVertical="@dimen/_16pxv"
                android:singleLine="true"
                android:text="@={chatVM.chatModel.etCommentValue}"
                android:textColor="@color/{&quot;name&quot;:&quot;blue_gray_400&quot;}"
                android:textColorHint="@color/{&quot;name&quot;:&quot;blue_gray_400&quot;}"
                android:textFontWeight="500"
                android:textSize="@dimen/_14pxh"
                android:textStyle="bold" tools:ignore="Autofill"/>
            <ImageButton
                android:background="@drawable/rectangle_bg_name_deep_purple_a200_radius_25"
                android:id="@+id/btnIconButton"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_50pxh"
                android:layout_width="@dimen/_50pxh"
                android:paddingHorizontal="@dimen/_13pxh"
                android:paddingVertical="@dimen/_13pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_group_9143" tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</layout>
